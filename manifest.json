{
  "manifest_version": 3,
  "name": "LLM Council",
  "version": "1.1.0",
  "description": "Send one prompt to multiple AI models, then let a Judge model score and rank all responses objectively.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "alarms",
    "webNavigation",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://www.perplexity.ai/*",
    "https://perplexity.ai/*",
    "https://grok.com/*",
    "https://x.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "strip_framing_headers",
        "enabled": true,
        "path": "rules/strip-headers.json"
      }
    ]
  },
  "incognito": "spanning",
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://grok.com/*",
        "https://x.com/i/grok*"
      ],
      "js": [
        "content-scripts/injector.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}